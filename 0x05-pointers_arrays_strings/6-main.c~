#include "holberton.h"

/**
 * cap_string - capitalizes all words of a string
 * @s: string to be capitalized
 *
 * Return: a pointer to a character in an array
 */
char *cap_string(char *s)
{
	int i;
	int inWord;

	inWord = 0;
	for (i = 0; s[i] != '\0'; i++)
	{
		/*	if ((s[i] >= 'a' && s[i] <= 'z') || (s[i] >= 'A' || s[i] <= 'Z');*/
		if (s[i] == [a-z] && inWord == 0)
		{
			inWord = 1;
			s[i] -= 32;
		}
		if (s[i] == ' ')
			inWord = 0;
		i++;
	}
}
