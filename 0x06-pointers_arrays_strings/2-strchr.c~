#include "holberton.h"
#include <stddef.h>

/**
 * _strchr - locates a character in a string
 * @s: the string
 * @c: the character
 *
 * Return: a pointer to a character aka the character found
 */
char *_strchr(char *s, char c)
{
	int i;
	int j;

	for (i = 0; s[i] != '\0' && s[i] != c; i++)
		;
	for (j = 0; s[i] != '\0'; j++)
	{
		s[j] = s[i];
		i++;
	}
	s[j] = s[i];
	return (s);
}
